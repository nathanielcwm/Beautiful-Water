            <xpath>Defs/TerrainDef[defName="WaterMovingChestDeep"]</xpath>
            <value>
                <statBases>
                    <Beauty>15</Beauty>
                </statBases>
            </value>
        </match>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/TerrainDef[defName="WaterMovingChestDeep"]</xpath>
            <value>
                <statBases>
                    <Beauty>5</Beauty>
                </statBases>
            </value>
        </nomatch>
