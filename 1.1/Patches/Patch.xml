<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/TerrainDef[defName="WaterMovingShallow"]</xpath>
        <value>
            <statBases>
                <Beauty>1</Beauty>
            </statBases>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/TerrainDef[defName="WaterOceanShallow"]</xpath>
        <value>
            <statBases>
                <Beauty>5</Beauty>
            </statBases>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/TerrainDef[defName="WaterOceanDeep"]</xpath>
        <value>
            <statBases>
                <Beauty>25</Beauty>
            </statBases>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/TerrainDef[defName="WaterDeep"]</xpath>
        <value>
            <statBases>
                <Beauty>15</Beauty>
            </statBases>
        </value>
    </Operation>
